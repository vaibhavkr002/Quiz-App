<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bkds"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:elevation="50dp"
        app:cardCornerRadius="70dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profile"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:id="@+id/name"
            android:textColor="@color/white"
           android:layout_gravity="center" />
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:elevation="50dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/edu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="200dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="QUIZ APP"
            android:textColor="@color/black"
            />


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:elevation="50dp"
        app:cardCornerRadius="30dp">



        <ImageView
            android:id="@+id/fullbody"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:src="@drawable/kk" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:text="LET'S START"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/btncorner"
            android:layout_marginRight="40dp"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:drawableRight="@drawable/rightarrow"
            android:text="Let's Start the Quiz"
            android:id="@+id/start"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:elevation="15dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:background="@drawable/bottom_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/home"
            android:src="@drawable/ic_black_home"
           android:background="@color/lightpup"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageButton
            android:id="@+id/powerBtn"
            android:src="@drawable/ic_account"
            android:background="@color/lightpup"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageButton
            android:id="@+id/arrow_left"
            android:src="@drawable/logout"
            android:background="@color/lightpup"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>

</LinearLayout>